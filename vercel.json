{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build",
        "buildCommand": "CI=false npm run build"
      }
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "^/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": ".*",
      "dest": "/index.html"
    }
  ],
  "env": {
    "REACT_APP_DEEPSEEK_API_KEY": "sk-4c27205edf134b53b269485c766f08d5",
    "REACT_APP_DEEPSEEK_API_URL": "https://api.deepseek.com",
    "ALLOWED_ORIGIN": "https://ai-legal-assistant.vercel.app",
    "NODE_ENV": "production"
  }
} 